<?xml version="1.0" encoding="utf-8"?>

<!--the word they searched and the list of definitions of that word-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.WordDefinitionsPage">

    <!--term user is searching for-->
    <TextView
        android:id="@+id/searchedTermTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searched Term"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        tools:ignore="MissingConstraints" />

    <!--definitions list of that term-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="392dp"
        android:layout_height="662dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.134"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>